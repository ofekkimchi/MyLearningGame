<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CBD3"
    tools:context=".Screens.MainActivity">

    <Button
        android:id="@+id/btnGoSingin"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#BE171A50"
        android:text="Sign in"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnGoSingup"
        app:layout_constraintEnd_toStartOf="@+id/btnGoSingup"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGoSingup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="74dp"
        android:backgroundTint="#BE171A50"
        android:text="Sign up"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLevels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGoSingin"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoSingup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnLevels"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="#BE171A50"
        android:text="Levels"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoSingup" />

</androidx.constraintlayout.widget.ConstraintLayout>