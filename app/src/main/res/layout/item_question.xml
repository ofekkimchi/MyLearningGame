<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שאלה"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRightAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תשובה נכונה"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWrongAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תשובה לא נכונה 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWrongAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תשובה לא נכונה 2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWrongAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תשובה לא נכונה 3"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>